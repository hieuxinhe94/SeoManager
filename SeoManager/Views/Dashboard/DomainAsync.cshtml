@model SeoManager.Models.DashBoardViewModel

@{
    ViewBag.Title = "Cài đặt Domain";
    Layout = "~/Views/Shared/_LayoutDashBoard.cshtml";
}
<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="row page-titles">
        <div class="col-md-6 col-8 align-self-center">
            <h3 class="text-themecolor m-b-0 m-t-0">Table</h3>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                <li class="breadcrumb-item active">Domain</li>
            </ol>
        </div>
       
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
        <!-- column -->
        <div class="col-sm-12">
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">Danh sách Domain đang theo dõi của bạn</h4>
                    <h6 class="card-subtitle">Total <code>@Model.DomainViewModel.Count()</code> record</h6>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>URL</th>
                                    <th>Miêu tả</th>
                                    <th>Ngày kích hoạt</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.DomainViewModel)
                                {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.URL</td>
                                    <td>@item.MieuTa</td>
                                    <td>@item.NgayKichHoat</td>
                                </tr>
                                }
                                 
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End PAge Content -->
    <!-- ============================================================== -->
</div>



